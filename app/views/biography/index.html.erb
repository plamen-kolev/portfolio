<div class="col-md-12 cv_header">
    <div class="wrapper">
        <div class="col-md-4">
            <h1>PLAMEN KOLEV,</h1>
            <p>Backend Software Engineer</p>
        </div>
        <div class="col-md-8 cv_header_info">
            <p>
                Email: <a href="mailto:p.kolev22@gmail.com">p.kolev22@gmail.com</a></br>
                LinkedIn: <a href="https://www.linkedin.com/in/plamen-kolev-465915a7">https://www.linkedin.com/in/plamen-kolev-465915a7</a>
            </p>
            
            
        </div>
    </div>
</div>

<div class="col-md-12 clearfix top_margin">
    <div class="wrapper experience">
        <div class="col-md-6">
            
        
            <div>
                <h1>About</h1>
                <p><%= @about.body.html_safe %></p>
            </div>
            <%= @work %>
            
            <div>
                <h1>Work Experience</h1>    
            </div>

            <% @work_experience.each do |w| %>
                <div class="section ">
                    <h2><%= w.title.html_safe %></h2>
                    <h3><%= w.date %></h3>
                    <p><%= w.body.html_safe %></p>
                </div>    
            <% end %> 
        </div>   
        <div class="col-md-6">
            <div>
                <h1>Education</h1>
            </div>

            <% @education.each do |e| %>
                <div class="section">
                    <h2><%= e.title.html_safe %></h2>
                    <h3><%= e.date %></h3>
                    <p><%= e.body.html_safe %></p>
                </div>
            <% end %>
            
            <div>
                <h1>Projects</h1>
            </div>

            <% @projects.each do |p| %>
                <div class="section">
                    <h2><%= p.title.html_safe %></h2>
                    <h3><%= p.date %></h3>
                    <p><%= p.body.html_safe %></p>
                </div>
            <% end %>
            
        </div>
    </div>

    <div class="col-md-12 center web_only">
        <a class="special_button" href="/media/cv.pdf">Download PDF version</a>
    </div>
</div>


<% content_for :links do %>
    <%= stylesheet_link_tag "print.css", media: "print" %>
<% end %>
