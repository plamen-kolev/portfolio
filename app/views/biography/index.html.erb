<div class="col-md-12 print_only" style="background: #e6f3ff !important;">
    <div  id="pdf_header" class="col-md-12">
        <div class="wrapper" style="background: #e6f3ff !important;">

            <div style="background-color: #f9f9f9 !important;" id="logo_menu" class="pull-left menu_circle">
                <% image_tag 'logo.svg' %>
            </div>
            <div class="pull-right">
                <table class="contact_information">
                    <tr></tr>
                    <tr></tr>

                    <tr class="contact-details-spacing">
                        <td>Website</td>
                        <td>kolev.io</td>
                    </tr>

                    <tr class="contact-details-spacing">
                        <td>Email</td>
                        <td>p.kolev22@gmail.com</td>
                    </tr>

                    <tr class="contact-details-spacing">
                        <td>Github</td>
                        <td>https://github.com/plamen-k</td>
